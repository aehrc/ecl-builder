{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
